@inherits LayoutComponentBase

<CascadingValue Name="SlideLayout" Value="this">
    <VisualViewport @ref=VisualViewport>
        <div class="h-screen w-screen absolute
                    bg-fixed bg-center bg-cover bg-[url('/images/background.jpeg')]"
             style="top:-@(VisualViewport.Top)px; left:-@(VisualViewport.Left)px;"
             @onwheel=onWheel 
             @ontouchstart=onTouchStart
             @ontouchmove=onTouchMove 
             @ontouchend=onTouchEnd
             @ontouchcancel=onTouchEnd>

            <div class="space-y-64 transition-all duration-1000" style="top:calc(-@_currentSlide * (100vh + 16rem))">
                @Body
            </div>

        </div>
    </VisualViewport>
</CascadingValue>
