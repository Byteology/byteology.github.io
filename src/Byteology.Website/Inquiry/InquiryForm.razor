@using Byteology.Website.Shared.Input
@using Microsoft.AspNetCore.Components.Forms
@using Byteology.Website.Inquiry.Service

<b-inquiry-form>
    <EditForm Model="_inquiryData" OnValidSubmit="onSubmit">
        <DataAnnotationsValidator />
        <TextInput Label="Name" Placeholder="John Doe" @bind-Value="_inquiryData.Name" autocomplete="name" />
        <TextInput Label="Email" Placeholder="example@mail.com" @bind-Value="_inquiryData.Email" autocomplete="email"/>
        <TextArea Label="Message" Placeholder="Type your message here..." @bind-Value="_inquiryData.Message" autocomplete="off"></TextArea>
        <Checkbox Label="I freely give my consent to have my personal information processed for the purpose of receiving feedback or solicited content." @bind-Value="_inquiryData.Consent" />

        <TextInput Label="Honeycomb" Placeholder="Honeycomb" @bind-Value=_inquiryData.Honeycomb class="hidden" />
        <button type="submit">Let's talk</button>
    </EditForm>
</b-inquiry-form>
