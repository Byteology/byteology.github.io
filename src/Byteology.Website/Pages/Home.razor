@page "/"

@using Byteology.Website.Components.HomePage
@using Byteology.Website.Components.HomePage.InquirySegment;
@using Byteology.Website.Data.Models.HomePage

<PageTitle>@_model.Title</PageTitle>

<PageRoot FullPageScrolling=true>

    <ScientificGeneralization Model="_model.ScientificGeneralization" />

    <ServicesList Services="_model.Services" />

    <Inquiry Model="_model.Inquiry" />

    <Footer Model="_model.Footer" />

</PageRoot>

@code {
    private HomePageModel _model = default!;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _model = ModelReader.Read<HomePageModel>("home-page-data.json");
    }
}