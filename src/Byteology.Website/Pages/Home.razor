@page "/"

@using Byteology.Website.Components.HomePage
@using Byteology.Website.Components.Inquiry

<PageTitle>@_model.Title</PageTitle>

<Page FullPageScrolling=true>

    <Intro />
    <ServicesList />
    <Inquiry />
    <Footer/>

</Page>


@code {
    [Inject]
    private ModelReader _modelReader { get; set; } = default!;
    private HomePageModel _model = default!;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _model = _modelReader.Read<HomePageModel>("home-page-data.json");
    }
}