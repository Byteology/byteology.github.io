@inherits StyleableComponent

<div @attributes=AdditionalAttributes class="flex flex-col md:flex-row @CssClass">
    <div class="grow h-[max(25vh,10rem)] flex content-center justify-center 
                md:grow-0 md:w-1/2 md:sticky md:top-1/2 md:-translate-y-1/2">
        <img class="my-8 md:my-0
                    max-w-[50%]
                    object-center object-contain
                    content-[url(/images/logo-portrait.svg)]"
                alt="Byteology - a moment of science"/>
    </div>

    <div class="md:px-4 lg:px-8
                md:w-1/2 md:max-w-3xl
                flex flex-col items-center justify-safe-center">

        <div class="p-8 bg-dark-900/70 shadow-md
                    border border-dark-100
                    md:max-w-xl flex flex-col gap-8
                    md:justify-center
                    text-base lg:text-2xl" >

            <div class="[&_strong]:text-accent font-bold">
                @(new MarkupString(Markdown.ToHtml(_model.Introduction)))
            </div>
    
            <Timeline class="text-sm lg:text-base text-accent" Items="@_model.Timeline" Context="item">
                <Item>
                    <p class="text-neutral-100">@(new MarkupString(Markdown.ToHtml(item)))</p>
                </Item>
            </Timeline>

            <a href="@(_routeManager.Match<Mission>()?.GetUrl())"
                class="button text-sm p-2">
                @_model.LinkText
            </a>

        </div>

    </div>

    <svg class="hidden md:block absolute bottom-4 h-12 left-1/2 -translate-x-1/2 animate-blink" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path class="fill-neutral-100" 
                fill-rule="evenodd" 
                d="M15.3 10.3a1 1 0 0 1 1.4 1.4l-4 4a1 1 0 0 1-1.4 0l-4-4a1 1 0 0 1 1.4-1.4l3.3 3.29 3.3-3.3z"/>
    </svg>
</div>