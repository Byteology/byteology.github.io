@inherits ByteologyComponent

<section @attributes=AdditionalAttributes
         class="slide mx-auto
                w-full h-full tablet:px-8
                snap-start snap-always
                overflow-x-hidden overflow-y-auto no-scrollbar
                py-4 
                flex flex-col justify-between items-center
                @CssClass">

    <div class="max-h-0"/>
    <div class="max-w-[56rem]">
        @ChildContent
    </div>
    <div class="max-h-0"/>

</section>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}