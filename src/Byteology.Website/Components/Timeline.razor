<div @attributes="InputAttributes">
    <ol class="timeline space-y-[1em] @(Dark ? "bg-dark text-light" : "bg-light text-dark")">
        @foreach (MarkupString item in _items)
        {
            <li class="group flex gap-[1.5em]">
                <div class="bullet group-hover:scale-105 transition @(Dark ? "text-secondary group-hover:text-accent" : "text-accent") font-bold text-[0.875em] pt-[0.125em]" />
                <div class=" transition line w-[2px] h-[calc(100%_-_0.5em)] @(Dark ? "bg-secondary group-hover:bg-accent" : "bg-accent") absolute left-[calc(0.875ch_-_1px)] top-[1.5em]" />
                <p class="group-hover:scale-105 transition @(Dark ? "" : "group-hover:text-accent")">@item</p>
            </li>
        }
    </ol>
</div>