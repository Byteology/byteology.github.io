<div @attributes="InputAttributes">
    <ol class="timeline space-y-[1em] @_listThemedClasses.Value">
        @foreach (MarkupString item in Items)
        {
            <li class="group flex gap-[1.5em]">
                <div class="bullet pt-[0.125em] font-bold text-[0.875em] transition group-hover:scale-105 @_bulletThemedClasses.Value" />
                <div class="line absolute left-[calc(0.875ch_-_1px)] top-[1.5em] w-[2px] h-[calc(100%_-_0.5em)] transition @_lineThemedClasses.Value" />
                <p class="group-hover:scale-105 transition">@item</p>
            </li>
        }
    </ol>
</div>

@code 
{
    private ThemedValue _listThemedClasses => new(() => Theme, "bg-light text-dark", "bg-dark text-light");
    private ThemedValue _bulletThemedClasses => new(() => Theme, "text-accent group-hover:text-secondary", "text-secondary group-hover:text-accent");
    private ThemedValue _lineThemedClasses => new(() => Theme, "bg-accent group-hover:bg-secondary", "bg-secondary group-hover:bg-accent");
}