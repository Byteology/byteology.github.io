@using Microsoft.AspNetCore.Components.Routing

<footer class="w-full h-[2.5rem] leading-[2.5rem] mt-auto
               bg-dark-900 border border-dark-100 shadow-md 
                text-xs text-center text-neutral-300">

    @(_model.Copyright.Replace("{year}", DateTime.Now.Year.ToString())) | 
    <NavLink class="transition-fast 
                    underline active:no-underline 
                    active:text-accent hocus:text-accent-300" 
             href="@(_routeManager.Match<Privacy>()?.GetUrl())"
             Match="NavLinkMatch.All">
        @_model.PrivacyPolicyText
    </NavLink>

</footer>