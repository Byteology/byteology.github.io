@inherits ByteologyComponent

<img @attributes=AdditionalAttributes
     class=" 
            portrait:w-1/2 portrait:max-h-[50%]
            landscape:h-1/2 landscape:max-w-[50%] 
            object-center object-contain
            portrait:content-[url(/images/logo-portrait.svg)] 
            landscape:content-[url(/images/logo-landscape.svg)]
            @fadeInAnimation @CssClass"
     alt="Byteology - a moment of science"/>

@code {
    [Parameter]
    public bool FadeIn { get; set; }

    private string fadeInAnimation => FadeIn ? "opacity-0 animate-[fade_2s_ease-out_.2s_reverse_forwards]" : string.Empty;
}
