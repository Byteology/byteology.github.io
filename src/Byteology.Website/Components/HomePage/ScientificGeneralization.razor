@using Byteology.Website.Data.Models.HomePage

@inherits ByteologyComponent

<div @attributes=AdditionalAttributes
     class="grid grid-cols-1 laptop:grid-cols-2 gap-8 content-center @CssClass">

    <div class="col-start-1
                text-h3 font-bold
                [&_strong]:text-emph">

        @(new MarkupString(Markdown.ToHtml(Model.Introduction)))

    </div>
    
    <Timeline Items="@Model.Timeline.Select(x => new MarkupString(Markdown.ToHtml(x))).ToArray()"
              class="col-start-1 row-span-1 laptop:col-start-2 laptop:row-span-2"/>


    <a 
        href="@Model.AboutUsUrl"
        class="button col-start-1 self-end p-2">

        @Model.AdditionalInfoText

    </a>

</div>

@code {
    [Parameter, Required]
    public ScientificGeneralizationModel Model { get; set; } = default!;
}