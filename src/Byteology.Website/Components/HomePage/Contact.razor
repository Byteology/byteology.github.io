@using Byteology.Website.Components.Input
@using Microsoft.AspNetCore.Components.Forms

<div class="p-8 bg-bg text-fg space-y-8">
    <h1 class="text-h3 font-bold text-emph text-center">Here's to working together</h1>

    <div class="grid grid-cols-1 laptop:grid-cols-[2fr_3fr] gap-8">

        <div class="flex flex-wrap gap-x-8 gap-y-4">
            <p class="text-detail tablet:text-base basis-full">Don't hesitate to reach out to us with any request or just to say hi and we will help you the best we can. We'll get back to you within 2 business days.</p>
        
            <div class="basis-[calc(50%_-_1rem)] grow flex flex-col whitespace-nowrap">

                <p class="text-emph font-bold">Tsvetan Igov</p>
                <p class="text-footnote font-bold mb-2">Founder of Byteology</p>
                <a class="link text-footnote" href="tel:+359 876 535 938">+359 876 535 938</a>
                <a class="link text-footnote" href="mailto:tsvetan.igov@byteology.net">tsvetan.igov@byteology.net</a>
            </div>

            <div class="basis-[calc(50%_-_1rem)] grow flex flex-col whitespace-nowrap">
                <p class="text-emph font-bold">Office</p>
                <p class="text-footnote font-bold mb-2">Sofia, Bulgaria</p>
                <p class="text-footnote">5 Hristo Belchev str</p>
                <a class="link text-footnote" href="mailto:contact@byteology.net">contact@byteology.net</a>
            </div>
        </div>
    

        <EditForm 
            Model="_inquiryModel" 
            OnValidSubmit="onSubmit"
            class="grid grid-cols-2 gap-8 content-start">

            <DataAnnotationsValidator />

            <TextInput Label="Name" Placeholder="John Doe" @bind-Value=_inquiryModel.Name class="col-span-2"/>
            <TextInput Label="Email" Placeholder="exaple@mail.com" @bind-Value=_inquiryModel.Email class="col-span-2 tablet:col-span-1"/>
            <TextInput Label="Phone (optional)" Placeholder="123-456-7890" @bind-Value=_inquiryModel.Phone class="col-span-2 tablet:col-span-1"/>
            <TextArea Label="Message" Placeholder="Type your message here..." @bind-Value=_inquiryModel.Message class="col-span-2"/>
            <Checkbox Label="I freely give my consent to have my personal information processed for the purpose of receiving feedback or solicited content." @bind-Value=_inquiryModel.Consent class="col-span-2 text-footnote text-fg-inactive hocus:text-fg transition-fast"/>
            <TextInput Label="Honeycomb" Placeholder="Honeycomb" @bind-Value=_inquiryModel.Honeycomb class="hidden" />
        
            <button 
                type="submit"
                class="button p-2 col-span-2">

                Submit

            </button>

        </EditForm>
    </div>
</div>