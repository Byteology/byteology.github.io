@namespace Byteology.Website.Components.DesignSystem

<section class="space-y-8">
    <h2 class="text-h1 font-bold text-accent">Colors</h2>
    <div class="grid grid-cols-1 tablet:grid-cols-2 desktop:grid-cols-4 gap-x-4 gap-y-8">
        <div class="space-y-4">
            <div class="bg-accent text-light border border-light p-4 pt-12">#583be2</div>
            <div class="text-detail">
                <p><span class="text-secondary">RGB</span> 88, 59, 226</p>
                <p><span class="text-secondary">HSL</span> 250°, 74%, 56%</p>
            </div>
        </div>
        <div class="space-y-4">
            <div class="bg-secondary text-dark border border-light p-4 pt-12">#60caef</div>
            <div class="text-detail">
                <p><span class="text-secondary">RGB</span> 96, 201, 239</p>
                <p><span class="text-secondary">HSL</span> 196°, 82%, 66%</p>
            </div>
        </div>
        <div class="space-y-4">
            <div class="bg-dark text-light border border-light p-4 pt-12" >#030e28</div>
            <div class="text-detail">
                <p><span class="text-secondary">RGB</span> 3, 14, 40</p>
                <p><span class="text-secondary">HSL</span> 222°, 86%, 8%</p>
            </div>
        </div>
        <div class="space-y-4">
            <div class="bg-light text-dark border border-light p-4 pt-12">#ffffff</div>
            <div class="text-detail">
                <p><span class="text-secondary">RGB</span> 255, 255, 255</p>
                <p><span class="text-secondary">HSL</span> 0°, 0%, 100%</p>
            </div>
        </div>
    </div>
</section>