<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <PropertyGroup>
    <!--<BlazorWasmPrerenderingDeleteLoadingContents>true</BlazorWasmPrerenderingDeleteLoadingContents>-->
    <!--<BlazorWasmPrerenderingUrlPathToExplicitFetch>/notfound</BlazorWasmPrerenderingUrlPathToExplicitFetch>-->
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Components\Footer.razor.json" />
    <Content Remove="Components\Inquiry\ContactForm.razor.json" />
    <Content Remove="Components\Inquiry\ContactsList.razor.json" />
    <Content Remove="Components\Intro.razor.json" />
    <Content Remove="Components\NavigationMenu.razor.json" />
    <Content Remove="Pages\Index.razor.json" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Pages\Privacy.razor.md" />
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Include="Components\Footer.razor.json" />
    <EmbeddedResource Include="Components\Inquiry\ContactForm.razor.json" />
    <EmbeddedResource Include="Components\Inquiry\ContactsList.razor.json" />
    <EmbeddedResource Include="Components\Hero.razor.json" />
    <EmbeddedResource Include="Components\Inquiry\Inquiry.razor.json" />
    <EmbeddedResource Include="Components\ServicesList.razor.json" />
    <EmbeddedResource Include="Pages\Index.razor.json" />
    <EmbeddedResource Include="Pages\Privacy.razor.md" />
  </ItemGroup>

  <ItemGroup>
    <!--<PackageReference Include="BlazorWasmPreRendering.Build" Version="1.0.0-preview.24.0" />-->
    <PackageReference Include="Markdig" Version="0.30.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.6" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="8.40.0.48530">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Include="Tailwind\tailwind.config.js" />
    <UpToDateCheckInput Include="Tailwind\tailwind.css" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="tailwindcss -c $(ProjectDir)Tailwind\tailwind.config.js -i $(ProjectDir)Tailwind\tailwind.css -o $(ProjectDir)wwwroot\css\style.css -m" ContinueOnError="true" />
  </Target>

</Project>
