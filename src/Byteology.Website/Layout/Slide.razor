<b-slide @ref="_slide" class="@(_isIntersecting || _state.Prerendering ? "active" : "")">

    <b-chevron class="@(_state.Prerendering ? "prerendered" : "")">
        <ChevronIcon/>
    </b-chevron>

    @ChildContent

    @if (IncludeFooter)
    {
        <PrivacyFooter/>
    }
    else
    {
        <b-chevron class="@(_state.Prerendering? "prerendered" : "")">
            <ChevronIcon/>
        </b-chevron>
    }

</b-slide>
